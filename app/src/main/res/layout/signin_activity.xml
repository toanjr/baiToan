<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp">
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/view1"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/hbe"
        android:id="@+id/hbe"
        android:layout_below="@+id/view1"
        android:layout_centerInParent="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hbe"
        android:layout_marginTop="15dp"
        android:id="@+id/v2"
        android:text="Sign in your account"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="20sp"
        android:textColor="#4D4B4B"
        android:layout_marginTop="20dp"
        android:id="@+id/tvsiemail"
        android:layout_below="@+id/v2"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Enter"
        android:inputType="text"
        android:id="@+id/edtsiemail"
        android:background="#DDEAF2"
        android:layout_below="@id/tvsiemail"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="20sp"
        android:textColor="#4D4B4B"
        android:id="@+id/tvsipass"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/edtsiemail"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Enter"
        android:inputType="text"
        android:id="@+id/edtsipass"
        android:background="#DDEAF2"
        android:layout_below="@id/tvsipass"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/edtsipass"
        android:id="@+id/btnsibt"
        android:layout_marginTop="30dp"
        android:background="#00B140"
        android:text="Sign In"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or sign in with"
        android:layout_below="@+id/btnsibt"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:textColor="#888888"
        android:textSize="15sp"
        android:id="@+id/asdasda"/>
   <FrameLayout
       android:layout_width="89dp"
       android:layout_height="50dp"
       android:layout_below="@+id/asdasda"
       android:background="#888888"
       android:layout_marginTop="10dp"
       android:id="@+id/fa1">
       <ImageView
           android:layout_width="40dp"
           android:layout_height="50dp"
           android:src="@drawable/gg"
           android:layout_gravity="center"/>
   </FrameLayout>
    <FrameLayout
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_toEndOf="@+id/fa1"
        android:layout_below="@+id/asdasda"
        android:background="#888888"
        android:layout_marginTop="10dp"
        android:id="@+id/fa2"
        android:layout_marginStart="25dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/fff"
            android:layout_gravity="center"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="89dp"
        android:layout_height="50dp"
        android:layout_below="@+id/asdasda"
        android:layout_toEndOf="@+id/fa2"
        android:background="#888888"
        android:layout_marginTop="10dp"
        android:id="@+id/fa3"
        android:layout_marginStart="25dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ttt"
            android:layout_gravity="center"/>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/fa1"
        android:id="@+id/v444"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/v444">
        <View
            android:layout_width="65dp"
            android:layout_height="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donâ€™t have an account? "
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sign Up"
            android:textColor="#05E70E"
            android:textStyle="bold"
            android:id="@+id/ggg"
            android:textSize="15sp"/>
    </LinearLayout>
</RelativeLayout>